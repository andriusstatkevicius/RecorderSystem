@page
@model RecorderSystem.Pages.RegistrationPages.CityRegistrationModel
@{
    ViewData["Title"] = "City registration";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <form method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="City.CityName" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="City.CityName" class="form-control" />
                    <span class="text-danger" asp-validation-for="City.CityName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="City.Country" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="City.Country" class="form-control" />
                    <span class="text-danger" asp-validation-for="City.Country"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>